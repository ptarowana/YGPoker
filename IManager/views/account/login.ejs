    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card">

                        <!-- Logo -->
                        <div class="card-header pt-4 pb-4 text-center bg-primary">
                            <span><img src="./img/foot_LJ_logo.png" alt="" height="54"></span>
                        </div>

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <h4 class="text-dark-50 text-center mt-0 font-weight-bold">로그인</h4>
                            </div>

                            <form action="/account/login" method="POST">

                                <div class="form-group">
                                    <label for="strID">Login ID</label>
                                    <input class="form-control" type="text" id="strID" name="strID" required="" placeholder="로그인 ID">
                                </div>

                                <div class="form-group">
                                    <label for="strPassword">Password</label>
                                    <input class="form-control" type="password" required="" id="strPassword" name="strPassword" placeholder="계정 비밀번호">
                                </div>

                                <% if ( messages ) { %>
                                    <p style="color:red;"><%= messages %></p>
                                    <% } %>
                                <br>

                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary" type="submit" id="LoginButton"> 로그인 </button>
                                </div>

                            </form>
                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

